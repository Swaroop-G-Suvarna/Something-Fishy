<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/conLayout"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/themeColor"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text=" Fresh Fins"
                android:textSize="24dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fish_carp_svgrepo_com"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="At Fresh Fins, we believe that great health starts with great food. Our mission is to bring the freshest, highest-quality seafood right to your doorstep, making it easy for you to enjoy delicious, sustainable seafood anytime"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our story"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Founded in 2024 by seafood enthusiasts frustrated with market inconsistencies, Fresh Fins was created to revolutionize seafood shopping. With expertise in marine biology, culinary arts, and logistics, our founders set out to provide a seamless, reliable seafood experience.

"/><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What we offer"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="We offer a variety of seafood, from wild-caught salmon to farm-raised shrimp, ensuring something for every seafood lover. Committed to eco-friendly fishing practices, our seafood is both delicious and responsible. Delivered within 24 hours of catch, our seafood guarantees peak freshness. Ordering is easy with our app, bringing fresh seafood to your door with just a few taps."/>

    </LinearLayout>

</ScrollView>