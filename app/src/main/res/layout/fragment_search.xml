<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:id="@+id/fishSearch"
        android:layout_height="150dp"
        app:cardBackgroundColor="#00000000"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="15dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4AB2E3">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fish"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search by fish"
                android:textSize="30sp"
                android:fontFamily="@font/k2d_semibold"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        app:cardCornerRadius="6dp"
        android:id="@+id/boatSearch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="#00000000"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="15dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E12027">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:fontFamily="@font/k2d_semibold"
                android:text="Search by boat"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand"
                android:background="#00000000"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/boat"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>